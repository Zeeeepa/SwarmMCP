{
  "name": "unified-mcp-server",
  "version": "0.1.0",
  "description": "Unified MCP server combining serv and SwarmMCP repositories",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
